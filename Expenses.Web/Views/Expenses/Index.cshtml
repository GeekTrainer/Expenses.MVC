@model Expenses.Web.Models.DashboardModel

@{
    ViewBag.Title = "Dashboard";
}

<h2>Dashboard</h2>

<div class="row">
    <hr />
    <div class="col-sm-6">
        <h3>Step 1</h3>
        <h4>@Html.ActionLink("Create new charges", "NewCharge")</h4>
    </div>
    <div class="col-sm-6">
        @if (Model.OutstandingCharges.Count == 0)
        {
            <h3>You don't have outstanding charges</h3>
        }
        else
        {
            <h3>You have @Model.OutstandingCharges.Count outstanding charges</h3>
            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Amount</th>
                        <th>Merchant</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model.OutstandingCharges)
                    {
                        <tr style="cursor:pointer;" onclick="parent.location='@Url.Action("Charge", new { Id = c.Id})'">
                            <td>@Html.DisplayFor(modelItem => c.ExpenseDate, "ShortDateTemplate")</td>
                            <td>@Html.DisplayFor(modelItem => c.BilledAmount, "CurrencyTemplate")</td>
                            <td>@Html.DisplayFor(modelItem => c.Merchant)</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>

    <div class="clearfix"></div>

    <hr />
    <div class="col-sm-6">
        <h3>Step 2</h3>
        <h4>@Html.ActionLink("Create new expense report", "NewReport")</h4>
    </div>
    <div class="col-sm-6">
        @if (Model.ReportsInProgress.Count == 0)
        {
            <h3>You don't have reports in progress</h3>
        }
        else
        {
            <h3>You have @Model.ReportsInProgress.Count reports in progress</h3>
            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th>Notes</th>
                        <th>Amount</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in Model.ReportsInProgress)
                    {
                        <tr style="cursor:pointer;" onclick="parent.location='@Url.Action("Report", new { Id = r.Id})'">
                            <td>@Html.DisplayFor(modelItem => r.Notes)</td>
                            <td>@Html.DisplayFor(modelItem => r.Amount, "CurrencyTemplate")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>

    <div class="clearfix"></div>

    <hr />
    <div class="col-sm-6">
        <h3>Step 3</h3>
        <h4>@Html.ActionLink("Submit report for approval", "reports")</h4>
    </div>
    <div class="col-sm-6">
        @if (Model.ReportsPendingApproval.Count == 0)
        {
            <h3>You don't have reports pending approval</h3>
        }
        else
        {
            <h3>You have @Model.ReportsPendingApproval.Count reports pending approval</h3>
            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th>Notes</th>
                        <th>Amount</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in Model.ReportsPendingApproval)
                    {
                        <tr style="cursor:pointer;" onclick="parent.location='@Url.Action("ViewReport", new { Id = r.Id})'">
                            <td>@Html.DisplayFor(modelItem => r.Notes)</td>
                            <td>@Html.DisplayFor(modelItem => r.Amount, "CurrencyTemplate")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>

    <div class="clearfix"></div>

    <hr />
    <div class="col-sm-6">
        <h3>Step 4</h3>
        <h4>@Html.ActionLink("Find out status of your expense report", "reports")</h4>
    </div>
    <div class="col-sm-6">
        @if (Model.RecentlyApprovedReports.Count == 0)
        {
            <h3>You don't have reports approved in the last 90 days.</h3>
        }
        else
        {
            <h3>You have @Model.RecentlyApprovedReports.Count approved in the last 90 days.</h3>
            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th>Notes</th>
                        <th>Amount</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in Model.RecentlyApprovedReports)
                    {
                        <tr style="cursor:pointer;" onclick="parent.location='@Url.Action("ViewReport", new { Id = r.Id})'">
                            <td>@Html.DisplayFor(modelItem => r.Notes)</td>
                            <td>@Html.DisplayFor(modelItem => r.Amount, "CurrencyTemplate")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>

    <div class="clearfix"></div>

</div>
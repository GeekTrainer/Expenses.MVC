@model IList<Expenses.Data.DbCharge>

@{
    ViewBag.Title = "Outstanding Charges";
}

<h2>Outstanding Charges</h2>

<p>
    @Html.ActionLink("Create New Charge", "NewCharge")
</p>

@if (@Model.Count == 0)
{
    <h4>You don't have outstanding charges</h4>
}
else
{
    <table class="table">
        <tr>
            <th>Date</th>
            <th>Notes</th>
            <th>Merchant</th>
            <th>Location</th>
            <th>Billed Amount</th>
            <th>Transaction Amount</th>
            <th>Description</th>
            <th></th>
        </tr>

        @foreach (var charge in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => charge.ExpenseDate, "ShortDateTemplate")</td>
                <td>@Html.DisplayFor(modelItem => charge.Notes)</td>
                <td>@Html.DisplayFor(modelItem => charge.Merchant)</td>
                <td>@Html.DisplayFor(modelItem => charge.Location)</td>
                <td>@Html.DisplayFor(modelItem => charge.BilledAmount, "CurrencyTemplate")</td>
                <td>@Html.DisplayFor(modelItem => charge.TransactionAmount, "CurrencyTemplate")</td>
                <td>@Html.DisplayFor(modelItem => charge.Description)</td>
                <td>
                    <div>@Html.ActionLink("Edit", "Charge", new { Id = charge.ChargeId })</div>
                    <div>@Html.ActionLink("Delete", "DeleteCharge", new { Id = charge.ChargeId })</div>
                </td>
            </tr>
        }
    </table>
}
